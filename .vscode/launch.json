{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Visible Compiled Spec",
      /// Usage: set appropriate breakpoints in a *.spec.ts file, then open the
      // respective *.spec.js file to run this task. Once a breakpoint is hit,
      // the debugger will open the source *.spec.ts file for debugging.
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/ava/profile.js",
      "args": [
        "${file}"
        // TODO: VSCode's launch.json variable substitution
        // (https://code.visualstudio.com/docs/editor/variables-reference)
        // doesn't quite allow us to go from:
        // `./src/path/to/file.ts` to `./build/main/path/to/file.js`
        // so the user has to navigate to the compiled file manually. (Close:)
        // "${workspaceFolder}/build/main/lib/${fileBasenameNoExtension}.js"
      ],
      "skipFiles": ["<node_internals>/**/*.js"],
      // Consider using `yarn watch` for faster debugging
      // "preLaunchTask": "npm: build",
      // "smartStep": true,
      "runtimeArgs": ["--nolazy"]
    },
    {
      "name": "Debug VM Spec",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/ava/profile.js",
      "args": [
        "${workspaceFolder}/build/main/lib/auth/virtual-machine.spec.js"
      ],
      "skipFiles": ["<node_internals>/**/*.js"],
      "preLaunchTask": "npm: build",
      "runtimeArgs": ["--nolazy"]
    },
    {
      "name": "Debug Common -> Push Spec",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/ava/profile.js",
      "args": [
        "${workspaceFolder}/build/main/lib/auth/instruction-sets/common/push.spec.js"
      ],
      "skipFiles": ["<node_internals>/**/*.js"],
      "preLaunchTask": "npm: build",
      "runtimeArgs": ["--nolazy"]
    },
    {
      "name": "Debug Bitcoin Cash Instruction Set",
      "type": "node",
      "request": "launch",
      "program":
        "${workspaceFolder}/src/lib/auth/instruction-sets/bitcoin-cash/bitcoin-cash.spec.debug.ts",
      "outFiles": ["${workspaceFolder}/build/main/**/*.js"],
      // "skipFiles": ["<node_internals>/**/*.js"],
      // Consider commenting out the line below and using `yarn watch` instead for faster debugging
      "preLaunchTask": "npm: build",
      "runtimeArgs": ["--nolazy"]
    },
    {
      "name": "Debug Bitcoin Cash Instruction Set Spec",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/ava/profile.js",
      "args": [
        "${workspaceFolder}/build/main/lib/auth/instruction-sets/bitcoin-cash/bitcoin-cash.spec.js"
      ],
      "skipFiles": ["<node_internals>/**/*.js"],
      "preLaunchTask": "npm: build",
      "runtimeArgs": ["--nolazy"],
      "stopOnEntry": true
    }
  ]
}
